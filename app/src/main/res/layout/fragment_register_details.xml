<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.register.RegisterDetails"
    style="@style/pageBackground"
    >

    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="30dp">

    <EditText
        android:id="@+id/yourName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:ems="10"
        android:textSize="20dp"
        android:fontFamily="sans-serif-black"
        android:background="@drawable/backgroundtxt"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:singleLine="true"/>

    <Spinner
        android:id="@+id/districtList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundtxt"
        android:textSize="20dp"
        android:spinnerMode="dropdown"
        android:layout_marginTop="40dp"
        />

    <Spinner
        android:id="@+id/talukaList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:background="@drawable/backgroundtxt"
        android:layout_marginTop="40dp"
        android:visibility="invisible"
        />

    <Spinner
        android:id="@+id/goanList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:textSize="20dp"
        android:background="@drawable/backgroundtxt"
        android:layout_marginTop="40dp"
        android:visibility="invisible"
        />
    <Button
        android:id="@+id/register_proceed"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/button"
        android:text="Proceed"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:visibility="invisible"
        />


</LinearLayout>

</LinearLayout>